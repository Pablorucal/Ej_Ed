//Desarrollar un algoritmo que permita ingresar la cantidad de hijos de N personas de una empresa,
// donde ninguno de ellos es pareja de otro, validando que este valor no sea negativo.
// Se declararán las variables junto con su tipo y ámbito bloque. Por tanto, se pedirá el número de personas,
// cada pareja sólo cuenta una, y a continuación, se solicitará el número de hijos por cada persona.
// Luego mostrar un cuadro resumen con la cantidad de personas que tienen hijos y los que no. Además,
// mostrar el promedio de hijos por persona, número máximo de hijos, el número mínimo de hijos.

const prompt= require('prompt-sync')();
let numPer=prompt('Dime cuantas personastrabajan en la empresa;');
numPer=Number(numPer);

let contadorsiHijo=0;
let contadornoHijo=0;
let sumaHijos=0;
let maxHijos=0;
let minHijos=0;

for(i=0;i<numPer;i++){
    let numHijos=prompt('cuantos hijos tiene la persona '+(i+1)+':');
    numHijos=Number(numHijos);
    while(numHijos<0){
        console.log('No puede ser un número negativo, vuelva a introducir');
        numHijos=prompt('cuantos hijos tiene la persona '+(i+1)+':');
        numHijos=Number(numHijos);
    }
    if(numHijos>0){
        contadorsiHijo++;
    }else{
        contadornoHijo++;
    }
    sumaHijos=sumaHijos+numHijos;
    if(i==0){
        maxHijos=numHijos;
        minHijos=numHijos;
    }else{
        if(numHijos>maxHijos){
            maxHijos=numHijos;
        }
        if(numHijos<minHijos){
            minHijos=numHijos;
        }
    }

}
let promedioHijos=sumaHijos/numPer;

console.log('Personas con hijos: '+contadorsiHijo);
console.log('Personas sin hijos: '+contadornoHijo);
console.log('Promedio de hijos por persona: '+promedioHijos);
console.log('Número máximo de hijos: '+maxHijos);
console.log('Número mínimo de hijos: '+minHijos);
